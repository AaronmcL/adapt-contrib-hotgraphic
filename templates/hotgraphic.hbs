<div class="hotgraphic-inner">
    {{#if title}}
    <div class="hotgraphic-title">
        <h4 class="hotgraphic-title-inner">
            {{{title}}}
        </h4>
    </div>
    {{/if}}
    {{#if body}}
    <div class="hotgraphic-body">
        <p class="hotgraphic-body-inner">
            {{{body}}}
        </p>
    </div>
    {{/if}}
    <div class="hotgraphic-widget">
      
        <div class="hotgraphic-graphic">
          
            <div class="hotgraphic-popup">
              
                <div class="hotgraphic-popup-toolbar clearfix">
                    <div class="hotgraphic-popup-nav">
                        <a href="#" class="hotgraphic-popup-controls back" title="back" alt="back">
                            <div class="hotgraphic-icon hotgraphic-popup-arrow-l"></div>
                        </a>
                        <div class="hotgraphic-popup-controls hotgraphic-popup-count">
                            <span class="current">1</span>/<span class="total">3</span>
                        </div>
                        <a href="#" class="hotgraphic-popup-controls next" title="next" alt="next">
                            <div class="hotgraphic-icon hotgraphic-popup-arrow-r"></div>
                        </a>
                    </div>
                    <a href="#" class="hotgraphic-popup-done" alt="done" title="done">
                      <div class="hotgraphic-icon hotgraphic-popup-close"></div>
                    </a>
                </div>
              
                <div class="hotgraphic-popup-inner clearfix">
                    {{#each items}}
                    <div class="hotgraphic-item item-{{@index}}">
                        <div class="hotgraphic-item-graphic">
                            <div class="hotgraphic-item-graphic-inner">
                                <img src="{{graphic.src}}" alt="{{graphic.alt}}" title="{{{graphic.title}}}"/>
                            </div>
                        </div>
                        <div class="hotgraphic-item-body">
                            <div class="hotgraphic-item-body-inner">
                                <h5>
                                    {{{title}}}
                                </h5>
                                <p>
                                    {{{body}}}
                                </p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
              
            </div>
          
            <img src="{{graphic.src}}" alt="{{graphic.alt}}" title="{{{graphic.title}}}"/>
            {{#each items}}
            <a href="#" class="hotgraphic-graphic-pin" data-id="item-{{@index}}" style="top:{{{top}}}%; left:{{{left}}}%;" title="{{graphicTitle}}">
                <div class="hotgraphic-icon hotgraphic-graphic-pin-icon"></div>
            </a>
            {{/each}}
        </div>
    </div>
</div>
